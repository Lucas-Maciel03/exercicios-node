<h1>Editando Endereço</h1>

<form action="/address/update" method="post" class="form">
    <input type="hidden" name="id" value="{{address.id}}">
    <input type="hidden" name="UserId" value="{{address.UserId}}">
    <div class="form-control">
        <label for="street">Nome da Rua:</label>
        <input type="text" name="street" placeholder="Digite o nome da rua" value="{{address.street}}">
    </div>
    <div class="form-control">
        <label for="number">Número da Residência:</label>
        <input type="text" name="number" placeholder="Digite o número da redidência" value="{{address.number}}">
    </div>
    <div class="form-control">
         <label for="city">Nome da Cidade:</label>
        <input type="text" name="city" placeholder="Digite o nome da Cidade" value="{{address.city}}">
    </div>

    <input type="submit" value="Editar">
</form>